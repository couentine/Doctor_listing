<p id="notice"><%= notice %></p>

<h1>Doctors in your Area</h1>

  <table class="table">
  <thead>
    <tr>
      <th><%= sortable "Name"%></th>
      <th><%= sortable "Speciality"%></th>
      <th><%= sortable "Zipc"%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <!-- I will print the list of all the doctor -->
    <% @docs.each do |doc| %>
      <tr>
        <td><%= link_to doc.name, doc %></td>
        <td><%= doc.speciality %></td>
        <td><%= doc.zipc %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Doc', new_doc_path %>
