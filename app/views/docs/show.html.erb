<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @doc.name %>
</p>

<p>
  <strong>Speciality:</strong>
  <%= @doc.speciality %>
</p>

<p>
  <strong>Zip:</strong>
  <%= @doc.zipc %>
</p>
<br>
 <!-- this line will change each time the speciality is different -->
  <p><b>Other <%= @doc.speciality %> Doctors:</b></p>

  <table class="table">
    <thead>
      <tr>
        <th><%= sortable 'Name'%></th>
        <th><%= sortable  'Speciality' %></th>
        <th><%= sortable 'zipc', 'Zip Code'  %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

      <tbody>
       <!-- I am doing a loop for search in all the doctors list -->
<% @docs.each do |doc| %>
<!-- then i select only the doctors with the same speciality than the one display on this page-->
<% if doc.speciality == @doc.speciality %>
      <tr>
        <td><%= link_to doc.name, doc%></td>
        <td><%= doc.speciality %></td>
        <td><%= doc.zipc%></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<%= link_to 'Back', docs_path %>
